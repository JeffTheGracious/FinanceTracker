@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Routing

<div class="sidebar @(Collapsed ? "collapsed" : "")">
    <div class="sidebar-header">

        <h4 class="nav-title nav-text">AI Finance Tracker</h4>

        <!-- Hamburger Toggle -->
        <button class="sidebar-toggle" @onclick="() => OnToggle.InvokeAsync()">
            <div class="hamburger-icon @(Collapsed ? "collapsed" : "")">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </button>

    </div>

    <nav class="nav flex-column mt-3">

        <NavLink href="/" class="nav-link" ActiveClass="active" Match="NavLinkMatch.All">
            <i class="bi bi-speedometer2 nav-icon"></i>
            <span class="nav-text">Dashboard</span>
        </NavLink>

        <NavLink href="/transactions" class="nav-link" ActiveClass="active">
            <i class="bi bi-wallet2 nav-icon"></i>
            <span class="nav-text">Transactions</span>
        </NavLink>

        <NavLink href="/add" class="nav-link" ActiveClass="active">
            <i class="bi bi-plus-circle nav-icon"></i>
            <span class="nav-text">Add Transaction</span>
        </NavLink>

    </nav>
</div>

@code {
    [Parameter] public bool Collapsed { get; set; }
    [Parameter] public EventCallback OnToggle { get; set; }
}
